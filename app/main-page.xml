<Page xmlns="http://schemas.nativescript.org/tns.xsd" navigatingTo="navigatingTo" class="page">
  <Page.actionBar>
    <ActionBar title="Best Practice Examples" icon="" class="action-bar">
    </ActionBar>
  </Page.actionBar>
  <StackLayout class="p-20">
    <ScrollView class="h-full">
      <StackLayout>
        <Label text="View Bindings" class="h2 text-center" />
        <GridLayout columns="*,5,*">
          <Button id="bindings-bad" col="0" text="Bad" tap="{{ viewDemo }}" class="btn btn-primary" />
          <Button id="bindings-good" col="2" text="Good" tap="{{ viewDemo }}" class="btn btn-primary" />
        </GridLayout>
        <Label text="ListViews" class="h2 text-center" />
        <GridLayout columns="*,5,*">
          <Button id="listviews-bad" col="0" text="Bad" tap="{{ viewDemo }}" class="btn btn-primary" />
          <Button id="listviews-good" col="2" text="Good" tap="{{ viewDemo }}" class="btn btn-primary" />
        </GridLayout>
        
      </StackLayout>
    </ScrollView>
  </StackLayout>
</Page>
